if [ "$BOOTSTRAP" ]; then
	./configure --prefix=$TOOLS --without-bash-malloc
	make -j1
	make install
	ln -sv bash $TOOLS/bin/sh
else
	_auto_build
	
	mkdir -p $PKG/bin
	mv $PKG/usr/bin/bash $PKG/bin
	
	install -d $PKG/etc
	install -m644 $FILES/bashrc $PKG/etc
	install -m644 $FILES/profile $PKG/etc
fi
