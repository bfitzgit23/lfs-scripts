export CFLAGS="$CFLAGS -g1"
export CXXFLAGS="$CXXFLAGS -g1"

build_opt="
	-DCMAKE_SKIP_RPATH=ON
	-DPORT=GTK
	-DLIB_INSTALL_DIR=/usr/lib
	-DUSE_LIBHYPHEN=OFF
	-DENABLE_GAMEPAD=OFF
	-DENABLE_MINIBROWSER=ON
	-DENABLE_DOCUMENTATION=OFF
	-DUSE_WOFF2=OFF
	-DUSE_GTK4=OFF
	-DENABLE_JOURNALD_LOG=OFF
	-DENABLE_BUBBLEWRAP_SANDBOX=OFF
	-DUSE_JPEGXL=OFF
"
